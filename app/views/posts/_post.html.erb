<div class="post-container">
  <h3><%= post.user.username %></h3>
  <p><%= post.content %></p>
  <h3>Posted on: <%= post.created_at.in_time_zone('Asia/Kolkata').strftime('%B %d, %Y %I:%M %p %Z') %></h3>

  <h3>Description:</h3> <!-- Ensure that 'Description' is displayed -->
  <p><%= post.description %></p> <!-- Display the description -->
  
  <% if post.image.present? %>
    <%= image_tag post.image.url ,width: "30%" %>
  <% end %>

  <% if post.video.present? %>
    <video controls , width="30%">
    <source src="<%= post.video.url %>" type="video/mp4">
    </video>
  <% end %>

  <h3>Comments:</h3>
  <ul>
    <% post.comments.each do |comment| %>
      <li>
        <p><strong><%= comment.user.email %>:</strong> <%= comment.content %></p>
      </li>
    <% end %>
  </ul>
</div>
